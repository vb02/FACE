<odoo>

    <record id="view_style_tree" model="ir.ui.view">
            <field name="name">product.style.tree</field>
            <field name="model">product.style</field>
            <!-- <field name="priority">4</field> -->
            <field name="arch" type="xml">
                <tree string="Style">
                    <field name="name" invisible="0"/>
                    <field name="code"/>
                    <field name="stock_no"/>
                    <field name="barcode"/>
                    <field name="brand_id"/>
                    <field name="is_active"/>
                    <field name="product_category"/>
                    <field name="quantity"/>
                    <field name="weight"/>
                    <field name="height"/>
                    <field name="volume"/>
                    <field name="depth"/>
                    <field name="product_template_id" invisible="1"/>
                    
                </tree>
            </field>
        </record>

    <record id="view_style_form" model="ir.ui.view">
            <field name="name">product.style.from</field>
            <field name="model">product.style</field>
            <!-- <field name="priority">4</field> -->
            <field name="arch" type="xml">
                <form string="Style Form">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" invisible="0"/>
                                <field name="code"/>
                                <field name="stock_no"/>
                                <field name="barcode"/>
                                <field name="brand_id"/>
                                <field name="is_active"/>
                                <field name="product_category"/>
                            </group>
                            <group>
                                <field name="quantity"/>
                                <field name="weight"/>
                                <field name="height"/>
                                <field name="volume"/>
                                <field name="depth"/>
                                <field name="product_template_id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>

</odoo>